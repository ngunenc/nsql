parameters:
    level: 8
    paths:
        - src
    excludePaths:
        - src/database/migrations
        - src/database/seeds
        - src/database/templates
    ignoreErrors:
        - '#Call to an undefined method PDO::#'
        - identifier: missingType.iterableValue
        - identifier: missingType.generics
    reportUnmatchedIgnoredErrors: false
    treatPhpDocTypesAsCertain: false
    # Memory limit artırıldı (512M → 1G) - HATA-012 çözümü
    memoryLimitFile: 1G
    # Parallel processing optimize edildi (memory kullanımını azaltmak için)
    parallel:
        # Job size küçültüldü (10 → 5) - daha küçük parçalar halinde işleme
        jobSize: 5
        # Process sayısı azaltıldı (2 → 1) - memory kullanımını minimize etmek için
        maximumNumberOfProcesses: 1
