{
    "name": "ngunenc/nsql",
    "description": "Modern PHP PDO veritabanı kütüphanesi",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Necip Günenç",
            "email": "info@necipgunenc.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "nsql\\database\\": "src/database/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR12 src/",
        "fix-style": "phpcbf -p --standard=PSR12 src/"
    },
    "minimum-stability": "stable"
}
