{
	"name": "ngunenc/nsql",
	"description": "Modern PHP PDO veritabanı kütüphanesi (nsql) v1.4",
	"type": "library",
	"license": "MIT",
	"version": "1.4.3",
	"authors": [
		{
			"name": "nsql contributors"
		}
	],
	"require": {
		"php": ">=8.0"
	},
	"autoload": {
		"psr-4": {
			"nsql\\": "src/"
		},
		"classmap": [
			"src/database/migrations",
			"src/database/config.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^10.5",
		"squizlabs/php_codesniffer": "^3.9",
		"phpstan/phpstan": "^1.11",
		"friendsofphp/php-cs-fixer": "^3.0"
	},
	"scripts": {
		"test": "phpunit -c phpunit.xml || phpunit",
		"test:setup": "php tests/setup_test_db.php",
		"test:cleanup": "php tests/cleanup_test_db.php",
		"test:full": [
			"@test:setup",
			"@test",
			"@test:cleanup"
		],
		"lint": "phpcs --standard=PSR12 src tests",
		"stan": "phpstan analyse src --level=max --memory-limit=1G",
		"fix": "php-cs-fixer fix --config=.php-cs-fixer.php"
	},
	"config": {
		"optimize-autoloader": true,
		"sort-packages": true
	},
	"archive": {
		"exclude": [
			"/tests",
			"/benchmarks",
			"/docs",
			"/.github",
			"/phpunit.xml",
			"/phpstan.neon",
			"/.php-cs-fixer.php",
			"/.php-cs-fixer.cache",
			"/README.md",
			"/CHANGELOG.md",
			"/INSTALLATION.md",
			"/TROUBLESHOOTING.md",
			"/GELISTIRME_PLANI.md",
			"/PROJE_ANALIZ_RAPORU.md",
			"/index.php",
			"/env.example"
		]
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}
