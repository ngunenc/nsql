# nsql Kütüphanesi Yapılandırma Örneği
# Bu dosyayı .env olarak kopyalayın ve değerlerinizi güncelleyin

# Ortam
ENV=development

# Veritabanı Bağlantı Bilgileri
DB_HOST=localhost
DB_NAME=nsql
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# PDO Seçenekleri
CONNECTION_TIMEOUT=5
PERSISTENT_CONNECTION=false

# Debug ve Log Ayarları
DEBUG_MODE=false
LOG_FILE=error_log.txt
AUDIT_LOG_FILE=audit_log.txt
LOG_DIR=storage/logs
LOG_MAX_SIZE=1048576

# Cache Ayarları
STATEMENT_CACHE_LIMIT=100
QUERY_CACHE_ENABLED=false
QUERY_CACHE_TIMEOUT=3600
QUERY_CACHE_SIZE_LIMIT=100

# Performans Ayarları
LARGE_RESULT_WARNING=10000
MAX_RESULT_SET_SIZE=1000000
MEMORY_CHECK_INTERVAL=30
MEMORY_LIMIT_WARNING=134217728
MEMORY_LIMIT_CRITICAL=268435456
AUTO_ADJUST_CHUNK_SIZE=true
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=10000

# Güvenlik Ayarları
SECURITY_STRICT_MODE=false
